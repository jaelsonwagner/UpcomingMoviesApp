<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jaelson.wagner.silva.upcomingmovies">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".UpcomingMoviesApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".ui.movies.upcoming.UpcomingMoviesActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.movies.details.MovieDetailsActivity"
              android:parentActivityName=".ui.movies.upcoming.UpcomingMoviesActivity">
      <!-- The meta-data tag is required if you support API level 15 and lower -->
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="ui.movies.upcoming.UpcomingMoviesActivity"/>
    </activity>
  </application>

</manifest>